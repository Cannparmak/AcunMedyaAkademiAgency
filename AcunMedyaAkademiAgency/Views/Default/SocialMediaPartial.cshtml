﻿@model List<AcunMedyaAkademiAgency.Entities.SocialMedia>
<style>
    .btn-social img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
    }
</style>

@foreach (var item in Model)
{
    string iconClass = "fas fa-camera"; 

    string iconName = item.Icon?.Trim().ToLower() ?? "";

    if (iconName.Contains("linkedin"))
    {
        iconClass = "fab fa-linkedin";
    }
    else if (iconName.Contains("github"))
    {
        iconClass = "fab fa-github";
    }
    else if (iconName.Contains("instagram"))
    {
        iconClass = "fab fa-globe"; 
    }

    <a class="btn btn-dark btn-social mx-2" href="@item.Url" target="_blank">
        <i class="@iconClass"></i>
    </a>
}
