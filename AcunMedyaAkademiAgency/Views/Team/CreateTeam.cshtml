@model AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "CreateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Ekleme Sayfası</h4>
            <p class="card-description">Personel ekleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">

                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Personel Adı, Soyadı"
                           name="NameSurname" />
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Fotoğraf Url</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Personel Fotoğraf Url'si "
                           name="ImageUrl" />
                </div>

                <div class="form-group">
                    <label for="exampleInputGender">Cinsiyet</label>
                    @Html.DropDownListFor(x => x.Gender,
                        new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Kadın", Value = "Kadın" },
                            new SelectListItem { Text = "Erkek", Value = "Erkek" },
                            new SelectListItem { Text = "Belirtmek İstemiyor", Value = "Belirtmek İstemiyor" }
                        },
                        "Cinsiyet Seçin",
                        new { @class = "form-control", id = "exampleInputGender" })
                </div>

                <div class="form-group">
                    <label for="exampleInputName2">Şehir</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Şehir"
                           name="City" />
                </div>

                <div class="form-group">
                    <label for="exampleInputCity1">Branşı</label>
                    @Html.DropDownListFor(x => x.BranchID, (List<SelectListItem>)ViewBag.v, new { @class = "table table-bordered" })
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="@Url.Action("TeamList", "Team")" class="btn btn-outline-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
