﻿@model AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "UpdateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Güncelleme Sayfası</h4>
            <p class="card-description">Personel güncelleme işlemlerini buradan yapabilirsiniz.</p>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>#</label>
                    @Html.TextBoxFor(x => x.TeamID, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label>Ad Soyad</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Cinsiyet</label>
                    @Html.DropDownListFor(x => x.Gender, new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Kadın", Value = "Kadın" },
                        new SelectListItem { Text = "Erkek", Value = "Erkek" },
                        new SelectListItem { Text = "Belirtmek İstemiyor", Value = "Belirtmek İstemiyor" }
                    }, new { @class = "table table-bordered" })
                </div>

                <div class="form-group">
                    <label>Şehir</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Branş</label>
                    @Html.DropDownListFor(x => x.BranchID, (List<SelectListItem>)ViewBag.cat, new { @class = "table table-bordered" })
                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <a href="@Url.Action("TeamList", "Team")" class="btn btn-outline-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>