﻿@model List<AcunMedyaAkademiAgency.Entities.Team>
@{
    ViewBag.Title = "TeamList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Sayfası</h4>

            <p class="card-description">
                Personeller ile ilgili işlemleri buradan yapabilirsiniz
            </p>
            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aranacak Kelime" aria-label="Aranacak Kelime" aria-describedby="basic-addon2" name="searchText" />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary"> Ara </button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Fotoğraf</th>
                            <th>Cinsiyet</th>
                            <th>Branş</th>
                            <th>Şehir</th>
                            <th>Güncelle</th>
                            <th>Sil</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TeamID</td>
                                <td>@item.NameSurname</td>
                                <td><img src="@item.ImageUrl" style="width:75px; height:75px" alt="Personel Fotoğrafı" /></td>
                                <td>@item.Gender</td>
                                <td>@item.Branch.BranchName</td>
                                <td>@item.City</td>
                                <td><a class="btn btn-success" href="/Team/UpdateTeam/@item.TeamID"><i class="fa fa-pencil">Güncelle</i></a></td>
                                <td><a class="btn btn-danger" href="/Team/DeleteTeam/@item.TeamID"><i class="fa fa-trash"></i>Sil</a></td>

                            </tr>                            
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Team/CreateTeam" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Personel Ekle</i></a>

            </div>
        </div>
    </div>
</div>