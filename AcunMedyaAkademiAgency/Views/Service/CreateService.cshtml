﻿
@{
    ViewBag.Title = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Ekleme Sayfası</h2>

<form method="post">
    <label>Hizmet Adı</label>
    <input type="text" class="form-control" name="Title" />
    <br />
    <label>Hizmet Resim Url</label>
    <input type="text" class="form-control" name="ImageUrl" />
    <br />
    <label>Hizmet Açıklaması</label>
    <textarea rows="4" class="form-control" name="Description"></textarea>
    <br />
    <button class="btn btn-danger">Hizmeti Kaydet</button>
    <a href="@Url.Action("ServiceList", "Service")" class="btn btn-outline-dark">Vazgeç</a>
</form>