@model AcunMedyaAkademiAgency.Entities.Message

@{
    ViewBag.Title = "Message Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Ekleme Sayfası</h4>
            <p class="card-description">Yeni mesaj eklemek için aşağıdaki formu doldurun.</p>

            @using (Html.BeginForm("CreateMessage", "Message", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="NameSurname">Ad Soyad</label>
                    <input type="text" class="form-control" id="NameSurname" name="NameSurname" required />
                </div>
                <div class="form-group">
                    <label for="Email">E-posta</label>
                    <input type="email" class="form-control" id="Email" name="Email" required />
                </div>
                <div class="form-group">
                    <label for="Title">Mesaj</label>
                    <textarea class="form-control" id="Message" name="Title" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <button class="btn btn-outline-dark">Vazgeç</button>
            }
        </div>
    </div>
</div>