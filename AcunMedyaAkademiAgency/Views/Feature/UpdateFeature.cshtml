﻿@model AcunMedyaAkademiAgency.Entities.Feature
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Öne Çıkan Güncelleme Sayfası</h4>
            <p class="card-description">Öne Çıkan güncelleme işlemlerini buradan yapabilirsiniz.</p>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>#</label>
                    @Html.TextBoxFor(x => x.FeatureID, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 4 })
                </div>
                <div class="form-group">
                    <label>Resim Url</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-outline-dark">Vazgeç</button>
            </form>
        </div>
    </div>
</div>